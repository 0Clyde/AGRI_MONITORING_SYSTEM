package com.agri.agri_system.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.agri.agri_system.model.User;
import com.agri.agri_system.repository.UserRepository;

import jakarta.servlet.http.HttpSession;

@RestController
@RequestMapping("/api/user")
public class ProfileController {

    @Autowired
    private UserRepository userRepository;

    /**
     * GET /api/user/profile
     * Get current logged-in user's profile
     */
    @GetMapping("/profile")
    public ResponseEntity<?> getUserProfile(HttpSession session) {
        try {
            // Get username from session
            String username = (String) session.getAttribute("username");
            
            if (username == null) {
                System.out.println("‚ùå No user in session - redirecting to login");
                Map<String, String> error = new HashMap<>();
                error.put("error", "Not logged in");
                return ResponseEntity.status(HttpStatus.UNAUTHORIZED).body(error);
            }

            // Find user in database
            User user = userRepository.findByUsername(username);
            
            if (user == null) {
                System.out.println("‚ùå User not found: " + username);
                Map<String, String> error = new HashMap<>();
                error.put("error", "User not found");
                return ResponseEntity.status(HttpStatus.NOT_FOUND).body(error);
            }

            // Prepare response (don't send actual password)
            Map<String, String> userProfile = new HashMap<>();
            userProfile.put("firstName", user.getFirstName());
            userProfile.put("lastName", user.getLastName());
            userProfile.put("username", user.getUsername());
            userProfile.put("email", user.getEmail());
            userProfile.put("password", "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"); // Masked password

            System.out.println("‚úÖ Profile loaded for user: " + username);
            return ResponseEntity.ok(userProfile);

        } catch (Exception e) {
            System.err.println("‚ùå Error loading profile: " + e.getMessage());
            e.printStackTrace();
            Map<String, String> error = new HashMap<>();
            error.put("error", "Failed to load profile");
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body(error);
        }
    }

    /**
     * PUT /api/user/profile
     * Update current logged-in user's profile
     */
    @PutMapping("/profile")
    public ResponseEntity<?> updateUserProfile(@RequestBody Map<String, String> profileData, 
                                               HttpSession session) {
        try {
            // Get username from session
            String username = (String) session.getAttribute("username");
            
            if (username == null) {
                System.out.println("‚ùå No user in session");
                Map<String, String> error = new HashMap<>();
                error.put("message", "Not logged in");
                return ResponseEntity.status(HttpStatus.UNAUTHORIZED).body(error);
            }

            // Find user in database
            User user = userRepository.findByUsername(username);
            
            if (user == null) {
                System.out.println("‚ùå User not found: " + username);
                Map<String, String> error = new HashMap<>();
                error.put("message", "User not found");
                return ResponseEntity.status(HttpStatus.NOT_FOUND).body(error);
            }

            // Update user fields
            if (profileData.containsKey("firstName")) {
                user.setFirstName(profileData.get("firstName"));
                System.out.println("üìù Updating firstName: " + profileData.get("firstName"));
            }
            if (profileData.containsKey("lastName")) {
                user.setLastName(profileData.get("lastName"));
                System.out.println("üìù Updating lastName: " + profileData.get("lastName"));
            }
            if (profileData.containsKey("username")) {
                // Check if new username already exists
                String newUsername = profileData.get("username");
                if (!newUsername.equals(username)) {
                    User existingUser = userRepository.findByUsername(newUsername);
                    if (existingUser != null) {
                        System.out.println("‚ùå Username already taken: " + newUsername);
                        Map<String, String> error = new HashMap<>();
                        error.put("message", "Username already taken");
                        return ResponseEntity.status(HttpStatus.BAD_REQUEST).body(error);
                    }
                    user.setUsername(newUsername);
                    // Update session username
                    session.setAttribute("username", newUsername);
                    System.out.println("üìù Updating username: " + newUsername);
                }
            }
            if (profileData.containsKey("email")) {
                user.setEmail(profileData.get("email"));
                System.out.println("üìù Updating email: " + profileData.get("email"));
            }

            // Save to database
            userRepository.save(user);

            System.out.println("‚úÖ Profile updated successfully for user: " + user.getUsername());

            Map<String, String> success = new HashMap<>();
            success.put("message", "Profile updated successfully");
            return ResponseEntity.ok(success);

        } catch (Exception e) {
            System.err.println("‚ùå Error updating profile: " + e.getMessage());
            e.printStackTrace();
            Map<String, String> error = new HashMap<>();
            error.put("message", "Failed to update profile");
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body(error);
        }
    }
}